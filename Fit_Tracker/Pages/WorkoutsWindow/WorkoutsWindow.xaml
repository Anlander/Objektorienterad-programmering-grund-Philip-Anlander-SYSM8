<Window x:Class="Fit_Tracker.Pages.WorkoutsWindow.WorkoutsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fit_Tracker.Pages.WorkoutsWindow"
        mc:Ignorable="d"
        Title="WorkoutsWindow" Height="450" Width="800">
    <Grid>
        <ListView ItemsSource="{Binding UserWorkouts}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Type" DisplayMemberBinding="{Binding Type}" />
                    <GridViewColumn Header="Duration" DisplayMemberBinding="{Binding Duration}" />
                    <GridViewColumn Header="Calories Burned" DisplayMemberBinding="{Binding CalobriesBurned}" />
                    <GridViewColumn Header="Notes" DisplayMemberBinding="{Binding Notes}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
