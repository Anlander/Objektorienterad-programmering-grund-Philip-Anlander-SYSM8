<UserControl x:Class="Fit_Tracker.MVVM.UserControl.UserLogout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Fit_Tracker.MVVM.UserControl"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
    <Grid VerticalAlignment="Center">
        <WrapPanel HorizontalAlignment="Right" >
            <TextBlock Text="{Binding Username, RelativeSource={RelativeSource AncestorType=UserControl}}" Foreground="Red" VerticalAlignment="Center"  />
            <Button Content="Logout" VerticalAlignment="Top" Width="60" HorizontalAlignment="Right" Margin="5" Click="Logout_Click"/>
        </WrapPanel>
    </Grid>
</UserControl>
